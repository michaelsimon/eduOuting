<div class="page-header"><center><h1><%= @trip.name %><br/><small><%= Date.parse(@trip.start_date.to_s).strftime("%B %d, %Y") %> <% if !@trip.end_date.blank? then %> - <%= Date.parse(@trip.end_date.to_s).strftime("%B %d, %Y") %><% end %> </small></h1></center></div>
<center>
<div align="center">
<% @photos.each do |photo| %>
<div class="col-xs-8 col-md-2">
    <img src="<%= photo.prefix %>width150<%= photo.suffix %>" alt="slide 1" class="thumbnail" />
  </div>
  <% end %>
</div>
</center>
<div class="col-lg-8">
<dl class="dl-horizontal">
	<dt>Section</dt><dd><%= @section.name %></dd>
	<dt>Teacher</dt><dd><%= @teacher.first_name %> <%= @teacher.last_name %></dd>
	<dt>Where</dt><dd><%= @trip.location %><% @venue.location["formattedAddress"].each do |line| %><%= line %><br /><% end %></dd>
	<dt>About</dt><dd><%= @venue.description %></dd>
	<br /><br/>
	<dt>Cost</dt><dd><%= number_to_currency(@trip.cost) %></dd>
	<dt>Additional Information</dt><dd><%= @trip.details %></dd>
</dl>
<% if user_signed_in? %>
	<% if current_user.id = @teacher.id %><%= link_to 'Edit', edit_trip_path(@trip.public_id), class: 'btn btn-lg btn-default'  %><br /><br/><% end %> 
<% end %>
<br/><br/><br/>
</div>

