<h2>Your Outings</h2>
<div class="table-responsive">
<table class="table table-hover">
	<tr>
		<th>Outing Name</th>
		<th>Section</th>
		<th>Date</th>
		<th></th>
	</tr>
	<% @trips.each do |trip| 
		@section = Section.find(trip.section)
    	@teacher = Teacher.find(@section.teacher_id) %>
	<tr>
		<td><%= trip.name %></td>
		<td><%= @section.name %></td>
		<td><%= Date.parse(trip.start_date.to_s).strftime("%B %d, %Y") %></td>
		<td><%= link_to "View", trip_path(trip.public_id), class: "btn btn-info btn-sm" %>&nbsp;&nbsp;&nbsp;<%= link_to "Edit", edit_trip_path(trip.public_id), class: "btn btn-warning btn-sm" %>&nbsp;&nbsp;&nbsp;<%= link_to "Delete", trip_path(trip.public_id)	, method: 'delete', confirm: "Are You Sure?", class: "btn btn-danger btn-sm" %></td>
	</tr>
	<% end %>
</table>

<h3><%= link_to "Add Outing", new_trip_path, class: "btn btn-default btn-large" %></h3>
