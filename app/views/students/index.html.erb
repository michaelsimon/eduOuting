

<h2>Viewing All Students</h2>

<table>
	<tr>
		<td>Students</td>
		<td>Sections</td>
		<td>&nbsp;</td>
	</tr>
<% @students.each do |student| %>
  	<tr>
		<td><%= student.first_name %> <%= student.last_name %></td>
		<td><%= @sections %></td>
		<td><%= link_to "Details" , student_path(student.id) %> | <%= link_to "Edit", edit_student_path(student.id) %> | </td>
	</tr>
	<% end %>
</table>

<h3><%= link_to "Add a Student", new_student_path %></h3>