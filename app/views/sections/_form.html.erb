<% if @section.errors.any? %>
  <h2>There were errors saving your Section information</h2>
  <ul>
    <% @section.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @section do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :students %><br />
    <%= f.collection_check_boxes :student_ids, Student.all, :id, :first_name, checked: @section.students.map(&:id) do |b| %>
    <%= b.check_box %> <%= b.label %>
    <br />
  <% end %>
  </div>
  <%= f.submit class: 'btn btn-lg btn-default' %>
<% end %>
