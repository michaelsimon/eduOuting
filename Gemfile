source 'https://rubygems.org'
ruby "2.3.0"

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '5.0.1'
# Use devise for security
gem 'devise'
# Use foursquare Gem for Venue Info
gem 'foursquare2', '~> 2.0.1'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Bootstrap for front-end design
gem 'bootstrap-sass'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
# Use jquery as the JavaScript library
gem 'jquery-rails'
# Use jquery-ui for interactive elements
gem 'jquery-ui-rails'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0',          group: :doc
# Use Pry as a runtime developer console
gem 'pry'
# Use pry as a rails console
gem 'pry-rails'

group :development, :test do
  # Use sqlite3 as the database for dev/test
  gem 'sqlite3'
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'
  # Allow for rails console within web browser (as necessary)
  gem 'web-console', '~> 3.0'
  # Generates diagrams to view relationships between models
  gem "rails-erd"
end

group :production do
  # Use postgres as the database for production
  gem 'pg'
  # Use rails_12factor for heroku
  gem 'rails_12factor'
end
